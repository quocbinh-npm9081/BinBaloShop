<div class=" max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="px-4 md:px-10 py-4 md:py-7">
        <div class="sm:flex items-center justify-between">
            <p tabindex="0"
                class="focus:outline-none text-base sm:text-lg md:text-xl lg:text-2xl font-bold leading-normal text-gray-800">
                Order All
            </p>
        </div>
        <% if(messages.error ){ %>
                <div class="flex items-center bg-red-500 text-white text-sm font-bold px-4 py-3" role="alert">
                <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
                <p><%=messages.error%></p>
            </div>
        <% }else if(messages.success){ %>
            <div class="flex items-center bg-green-500 text-white text-sm font-bold px-4 py-3" role="alert">
                <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
                <p><%=messages.success%></p>
            </div>
        <% } %>      
    </div>
    <div class="bg-white px-4 md:px-10 pb-5">
        <div class="overflow-x-auto	">
            <table class="w-full whitespace-nowrap  ">
                <thead>
                    <tr>
                        <th class="font-bold text-sm text-left px-2 py-1">
                            CustomerId
                        </th>
                        <th class="font-bold text-sm text-left px-2 py-1">
                            Phone Number
                        </th>
                        <th class="font-bold text-sm text-left px-2 py-1">
                            Adress
                        </th>
                        <th class="font-bold text-sm text-left px-2 py-1">
                            Time
                        </th>
                    </tr>
                </thead>
                <tbody >
                    <% if(orders){ %>
                        <% orders.forEach((order)=>{ %>
                        <tr >
                            <td class="border border-green-400 px-2 py-1 ">
                                <a href="" class="text-green-500	">
                                    <%= order.customerId %>
                                </a>
                            </td>
                            <td class="border border-green-400 px-2 py-1"> 
                                <%= order.phone %>
                            </td>
                            <td class="border border-green-400 px-2 py-1" > 
                                <%= order.adress %>
                            </td>
                            <td class="border border-green-400 px-2 py-1"> 
                                <%= moment(order.createdAt).format("dddd, MMMM Do YYYY, h:mm:ss a") %>
                            </td>
                            <td class="border border-green-400 px-2 py-1"> 
                                <a class="flex-1 px-3 py-1 font-semibold select-none rounded-md text-white bg-indigo-500 hover:bg-indigo-600" href="/customer/orders/<%= order._id %>"> Status</a>
                               
                            </td>
                        </tr>
                        <% }) %>
                    <% }else{%>
                        <tr tabindex="0" class="focus:outline-none text-sm leading-none text-gray-600 h-16">
                            Order not found !
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
          
    </div>
    <div class="mt-4 sm:mt-0 flex justify-center">
        <a href="/" class="btn px-4 py-2">
            Keep Shopping
        </a>
    </div>
</div>